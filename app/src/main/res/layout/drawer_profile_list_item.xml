<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginLeft="12dp"
    android:layout_gravity="center">

    <com.webmedia7.mohsinhussain.fetchmethere.Classes.RoundedImageView
        android:id="@+id/profile_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:visibility="gone"
        android:src="@drawable/private_user_icon"
        android:contentDescription="Profile Picture"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/displayName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_toRightOf="@id/profile_image"
        android:minHeight="?android:attr/listPreferredItemHeight"
        android:textAppearance="?android:attr/textAppearanceListItem"
        android:textColor="#fff"
        android:gravity="center_vertical"
        android:paddingRight="40dp"/>

    <TextView android:id="@+id/chatCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/couter_bg"
        android:layout_toRightOf="@+id/displayName"
        android:layout_centerVertical="true"
        android:visibility="gone"
        android:layout_marginRight="15dp"
        android:textColor="#fff"/>

    <TextView android:id="@+id/navCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/couter_bg"
        android:layout_toRightOf="@+id/chatCounter"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:textColor="#fff"/>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_overlay"
    android:padding="15dp"
    android:layout_gravity="center_vertical">

    <ImageView
        android:id="@+id/icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/private_user_icon_large"
        />

    <TextView
        android:id="@+id/title_text_view"
        android:text="TITLE"
        android:layout_marginLeft="15dp"
        android:background="@android:color/transparent"
        android:textSize="22sp"
        android:textColor="#342C29"
        android:layout_below="@+id/icon_image_view"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/description_text_view"
            android:layout_below="@+id/title_text_view"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#342C29"
            android:layout_marginTop="15dp"
            android:background="@android:color/transparent"
            android:textSize="16sp"
            android:text="Lorem ipsum dolor sit amet, consetetur sadipscing elitr, sed diam nonumy eirmod."/>




</RelativeLayout>
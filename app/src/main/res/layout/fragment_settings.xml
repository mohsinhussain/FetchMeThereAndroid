<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F3EB"
    android:padding="5dp"
    android:layout_gravity="center_horizontal"
    android:gravity="center_horizontal"
    tools:context="com.webmedia7.mohsinhussain.fetchmethere.Activities.RegisterActivity">

    <Switch
        android:id="@+id/unitSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textOn="KMs"
        android:textOff="Miles"
        android:checked="true"
        android:layout_marginTop="20dp"
        android:text="Navigation Units" />

    <Switch
        android:id="@+id/voiceSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/unitSwitch"
        android:layout_marginTop="20dp"
        android:checked="true"
        android:text="Voice Navigation" />

</RelativeLayout>
